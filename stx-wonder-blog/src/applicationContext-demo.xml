<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="studentAction" class="com.stx.demo.action.StudentAction"
		scope="prototype">
		<property name="service" ref="studentService"></property>
	</bean>

	<bean id="studentService" class="com.stx.demo.service.impl.StudentServiceImpl">
		<property name="dao" ref="studentDao"></property>
	</bean>

	<bean id="studentDao" class="com.stx.demo.dao.impl.StudentDaoImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>

</beans>
